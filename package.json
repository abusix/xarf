{
  "name": "xarf-bundler",
  "version": "0.1.0",
  "description": "Created bundled and fully derefed versions of xarf schema",
  "repository": "https://github.com/abusix/xarf.git",
  "author": "Frederik Petersen <fp@abusix.com>",
  "license": "MIT",
  "scripts": {
    "bundle-xarf": "node bundle_xarf.js",
    "test-xarf": "nyc --reporter=lcov mocha test_xarf.js",
    "report-coverage-codecov": "codecov",
    "report-coverage-coveralls": "cat ./coverage/lcov.info | ./node_modules/coveralls/bin/coveralls.js",
    "clean-coverage": "rm -rf .nyc_output .ajv_istanbul coverage"
  },
  "dependencies": {
    "@apidevtools/json-schema-ref-parser": "^9.0.1",
    "jsonfile": "^6.0.1"
  },
  "devDependencies": {
    "ajv": "^6.12.2",
    "codecov": "^3.7.0",
    "coveralls": "^3.1.0",
    "eslint": "^7.0.0",
    "eslint-plugin-mocha": "^7.0.0",
    "husky": ">=4",
    "istanbul-lib-instrument": "^4.0.3",
    "js-beautify": "^1.11.0",
    "lint-staged": ">=10",
    "mocha": "^7.1.2",
    "nyc": "^15.0.1",
    "prettier": "2.0.5",
    "uuid": "^8.0.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": "eslint",
    "*.{js,json,md,yml}": "prettier --check"
  }
}
