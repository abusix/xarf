{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://raw.githubusercontent.com/xarf/schema-discussion/master/schemas/development/bot.schema.json",
  "title": "XARF BOT",
  "description": "A format to report Bot events.",
  "allOf": [
    {
      "$ref": "xarf_shared.schema.json#/properties/XarfBase"
    },
    {
      "type": "object",
      "properties": {
        "Report": {
          "allOf": [
            {
              "$ref": "xarf_shared.schema.json#/properties/IpAndUrlBasedReport"
            },
            {
              "type": "object",
              "properties": {
                "ReportClass": {
                  "type": "string",
                  "enum": ["Content"]
                },
                "ReportType": {
                  "type": "string",
                  "enum": ["Bot"]
                },
                "BotName": {
                  "type": "string",
                  "description": "name of the bot"
                }
              }
            },
            {
              "$ref": "xarf_shared.schema.json#/properties/CommonProps"
            }
          ]
        }
      }
    }
  ]
}
